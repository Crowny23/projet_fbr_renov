{% extends 'base.html.twig' %}

{% block title %}Commandes | Liste des fournisseur{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <h1 class="col-12 col-sm-9 text-center fs-2">Détails du fournisseur</h1>
</div>

<table class="table">
    <tbody>
        <tr>
            <th>Nom du fournisseur</th>
            <td>{{ supplier.nameSupplier }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ supplier.email }}</td>
        </tr>
        <tr>
            <th>Téléphone</th>
            <td>0{{ supplier.phone }}</td>
        </tr>
        <tr>
            <th>Ville</th>
            <td>{{ supplier.city }}</td>
        </tr>
        <tr>
            <th>Code Postal</th>
            <td>{% if (supplier.cp|length is same as 4) %}0{{ supplier.cp }}{% else %}{{supplier.cp }}{% endif %}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ supplier.address }}</td>
        </tr>
        <tr>
            <th>Date de création</th>
            <td>{{ supplier.createdAt ? supplier.createdAt|date('d M Y H:i:s') : '' }}</td>
        </tr>
    </tbody>
</table>

<div class="d-flex">
    <a href="{{ path('app_supplier_index') }}" class="btn btn-primary mb-3 me-2"><i class="fa-solid fa-reply"></i> Retour</a>

    <a href="{{ path('app_supplier_edit', {'id': supplier.id}) }}" class="btn btn-primary mb-3 me-2">Modifier</a>

    {{ include('supplier/_delete_form.html.twig') }}
</div>
{% endblock %}
