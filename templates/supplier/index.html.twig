{% extends 'base.html.twig' %}

{% block title %}Supplier index{% endblock %}

{% block body %}
    <h1>Supplier index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du fournisseur</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                {# <th>City</th>
                <th>Cp</th>
                <th>Adress</th> #}
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for supplier in suppliers %}
            <tr>
                <td>{{ supplier.id }}</td>
                <td>{{ supplier.nameSupplier }}</td>
                <td>{{ supplier.email }}</td>
                <td>{{ supplier.phone }}</td>
                <td>{{ supplier.adress }}, {{ supplier.cp }} {{ supplier.city }}</td>
                {# <td>{{ supplier.city }}</td>
                <td>{{ supplier.cp }}</td>
                <td>{{ supplier.adress }}</td> #}
                <td>{{ supplier.createdAt ? supplier.createdAt|date('d M Y H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_supplier_show', {'id': supplier.id}) }}">Voir</a>
                    <a href="{{ path('app_supplier_edit', {'id': supplier.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Pas de fournisseur existant</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_supplier_new') }}">Ajouter un fournisseur</a>
{% endblock %}
