{% extends 'base.html.twig' %}

{% block title %}Designation{% endblock %}

{% block body %}
    <h1>Designation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ designation.name }}</td>
            </tr>
            <tr>
                <th>Unité</th>
                <td>{{ designation.unity }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ designation.quantity }}</td>
            </tr>
            <tr>
                <th>Prix unitaire HT</th>
                <td>{{ designation.priceUnitaryHt }}</td>
            </tr>
            <tr>
                <th>TVA</th>
                <td>{{ designation.tva }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_designation_index') }}" class="btn btn-primary mb-2"><i class="fa-solid fa-reply"></i> Retour </a>

    <a href="{{ path('app_designation_edit', {'id': designation.id}) }}" class="btn btn-primary mb-2">Modifier</a>

    {{ include('designation/_delete_form.html.twig') }}
{% endblock %}
