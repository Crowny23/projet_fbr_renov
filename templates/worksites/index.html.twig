{% extends 'base.html.twig' %}

{% block title %}Liste des chantiers{% endblock %}

{% block body %}
    <h1>Liste des chantiers</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nom du chantier</th>
                <th>Adresse Complète</th>
                <th>Client</th>
                <th>Date de début</th>
                <th>Distance</th>
                <th>Urgent</th>
                <th>Statut</th>
                <th>Actions</th>
                <th> <a href="{{ path('app_worksites_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Ajouter </a></th>
            </tr>
        </thead>
        <tbody>
        {% for worksite in worksites %}
            <tr style="background-color: white;">
                <td>{{ worksite.nameWorksite }}</td>
                <td>{{ worksite.adressWorksite}}, {{ worksite.cpWorksite }} {{ worksite.cityWorksite }}</td>
                <td>{{ worksite.clientWorksite }}</td>
                <td>{{ worksite.startAt ? worksite.startAt|date('d M Y') : '' }}</td>
                <td>{{ worksite.travelDistanceWorksite }}</td>
                <td>{{ worksite.isUrgent ? 'Oui' : 'Non' }}</td>
                <td>{{ worksite.statusWorksite }}</td>
                <td>
                    <a href="{{ path('app_worksites_show', {'id': worksite.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_worksites_edit', {'id': worksite.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
                <td>
                    <div title="Add to Calendar" class="addeventatc btn btn-light" data-styling="none">
                        <i class="fa fa-calendar"></i>
                        <span class="start">10/27/2022 09:00 AM</span>
                        <span class="end">10/27/2022 11:00 AM</span>
                        <span class="timezone">Europe/Paris</span>
                        <span class="title">Summary of the event</span>
                        <span class="description">Description of the event</span>
                        <span class="location">Location of the event</span>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">Aucun chantier existant</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
