{% extends 'base.html.twig' %}

{% block title %}Liste des chantiers{% endblock %}

{% block body %}
    <h1 style="font-size: 2rem;">Liste des chantiers</h1>
    <a href="{{ path('app_worksites_new') }}" class="btn btn-primary float-end mt-2 col-2"><i class="fa fa-plus"></i> Ajouter</a>
    <table class="table table-hover" id="table" data-toggle="table" data-search="true" data-locale="fr-FR" data-pagination="true">
        <thead>
            <tr>
                <th data-sortable="true" data-field="worksite_name">Nom du chantier</th>
                <th data-sortable="true" data-field="address">Adresse Complète</th>
                <th data-sortable="true" data-field="customer">Client</th>
                <th data-sortable="true" data-field="date_start">Date de début</th>
                <th data-sortable="true" data-field="dist">Distance</th>
                <th data-sortable="true" data-field="urgent">Urgent</th>
                <th data-sortable="true" data-field="status">Statut</th>
                <th>Actions</th>
                
            </tr>
            
        </thead>
        <tbody>
        {% for worksite in worksites %}
            <tr>
                <td>{{ worksite.nameWorksite }}</td>
                <td>{{ worksite.adressWorksite}}, {{ worksite.cpWorksite }} {{ worksite.cityWorksite }}</td>
                <td>{{ worksite.clientWorksite }}</td>
                <td>{{ worksite.startAt ? worksite.startAt|date('d M Y') : '' }}</td>
                <td>{{ worksite.travelDistanceWorksite }}</td>
                <td>{{ worksite.isUrgent ? 'Oui' : 'Non' }}</td>
                <td>{{ worksite.statusWorksite }}</td>
                <td>
                    <a href="{{ path('app_worksites_show', {'id': worksite.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_worksites_edit', {'id': worksite.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">Aucun chantier existant</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
