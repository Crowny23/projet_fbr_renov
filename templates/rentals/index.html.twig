{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table table-hover">
        <thead class="table">
            <tr>
                <th>Matériel</th>
                <th>Qauantité</th>
                <th>Prix Unitaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rental in rentals %}
            <tr>
                <td>{{ rental.getMaterialsRental().nameMaterial }}</td>
                <td>{{ rental.quantityRental }}</td>
                <td>{{ rental.unitPrice }}</td>

                <td>
                    <a href="{{ path('app_rentals_show', {'id': rental.id}) }}" class="btn btn-primary"><i class="fa-sharp fa-solid fa-eye"></i></a>
                    <a href="{{ path('app_rentals_edit', {'id': rental.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rentals_new') }}" class="btn btn-primary">Créer</a>
{% endblock %}
