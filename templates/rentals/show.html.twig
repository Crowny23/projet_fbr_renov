{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Matériel</th>
                <td>{{ rental.getMaterialsRental().nameMaterial }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ rental.quantityRental }}</td>
            </tr>
            <tr>
                <th>Prix Unitaire</th>
                <td>{{ rental.unitPrice }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ rental.createdAt ? rental.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ rental.updatedAt ? rental.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_rentals_index') }}" class="btn btn-primary mb-3"><i class="fa-solid fa-reply"></i> Retour</a>

    <a href="{{ path('app_rentals_edit', {'id': rental.id}) }}" class="btn btn-primary mb-3">Modifier</a>

    {{ include('rentals/_delete_form.html.twig') }}
{% endblock %}
