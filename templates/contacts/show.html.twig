{% extends 'base.html.twig' %}

{% block title %}Contacts | Détails{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <h1 class="col-12 col-sm-9 text-center fs-2">Détails du contact</h1>
</div>

<table class="table">
    <tbody>
        <tr>
            <th>Intitulé</th>
            <td>{{ contact.title }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ contact.lastname }}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ contact.firstname }}</td>
        </tr>
        <tr>
            <th>Ville</th>
            <td>{{ contact.city }}</td>
        </tr>
        <tr>
            <th>Téléphone</th>
            <td>0{{ contact.tel }}</td>
        </tr>
        <tr>
            <th>E-mail</th>
            <td>{{ contact.mail }}</td>
        </tr>
        <tr>
            <th>Catégorie</th>
            <td>{{ contact.contactsCategories }}</td>
        </tr>
    </tbody>
</table>

<div class="d-flex">
    <a href="{{ path('app_contacts_index') }}" class="btn btn-primary mb-2 me-2"><i class="fa-solid fa-reply"></i> Retour</a>

    <a href="{{ path('app_contacts_edit', {'id': contact.id}) }}" class="btn btn-primary mb-2 me-2">Modifier</a>

    {{ include('contacts/_delete_form.html.twig') }}
</div>
{% endblock %}
