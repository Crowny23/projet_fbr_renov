{% extends 'base.html.twig' %}

{% block title %}Dépannages | Catégories{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <h1 class="col-12 col-sm-9 text-center fs-2">Liste des catégories de dépannages</h1>
</div>
    <a href="{{ path('app_repairs_categories_new') }}" class="btn btn-primary float-sm-end mt-2 col-6 col-sm-4 col-md-3 col-lg-2"><i class="fa fa-plus"></i> Ajouter</a>
    <table class="table table-hover" id="table" data-toggle="table" data-search="true" data-locale="fr-FR" data-pagination="true">
        <thead>
            <tr>
                <th data-sortable="true" data-field="category_name">Nom de la catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for repairs_category in repairs_categories %}
            <tr>
                <td>{{ repairs_category.nameRepairsCategory }}</td>
                <td>
                    <a href="{{ path('app_repairs_categories_show', {'id': repairs_category.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_repairs_categories_edit', {'id': repairs_category.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune catégorie existante</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
