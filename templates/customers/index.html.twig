{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <h1>Customers</h1>

    <table class="table table-hover" id="table" data-toggle="table" data-search="true" data-locale="fr-FR" data-pagination="true">
        <thead>
            <tr>
                <th data-sortable="true" data-field="firstname">Prenom</th>
                <th data-sortable="true" data-field="lastname">Nom</th>
                <th data-sortable="true" data-field="address">Addresse Complète</th>
                <th data-sortable="true" data-field="mail">E-mail</th>
                <th data-sortable="true" data-field="phone">Téléphone</th>
                <th data-sortable="true" data-field="social_reason">Raison Sociale</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.firstname }}</td>
                <td>{{ customer.lastname }}</td>
                <td>{{ customer.address }} {{ customer.postalcode }} {{ customer.Town }}</td>
                <td>{{ customer.mail }}</td>
                <td>0{{ customer.phone }}</td>
                <td>{{ customer.socialReason }}</td>
                <td>{{ customer.customerNote }}</td>
                <td>
                    <a href="{{ path('app_customers_show', {'id': customer.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_customers_edit', {'id': customer.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_customers_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Créer nouveau</a>
{% endblock %}
