{% extends 'base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
    <h1>Customers</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Ville</th>
                <th>Code Postal</th>
                <th>Addresse</th>
                <th>E-mail</th>
                <th>Téléphone</th>
                <th>Raison Sociale</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.firstname }}</td>
                <td>{{ customer.lastname }}</td>
                <td>{{ customer.Town }}</td>
                <td>{{ customer.postalcode }}</td>
                <td>{{ customer.address }}</td>
                <td>{{ customer.mail }}</td>
                <td>{{ customer.phone }}</td>
                <td>{{ customer.socialReason }}</td>
                <td>{{ customer.customerNote }}</td>
                <td>
                    <a href="{{ path('app_customers_show', {'id': customer.id}) }}" class="btn btn-primary"><i class="fa-sharp fa-solid fa-eye"></i></a>
                    <a href="{{ path('app_customers_edit', {'id': customer.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_customers_new') }}" class="btn btn-primary">Créer nouveau</a>
{% endblock %}
