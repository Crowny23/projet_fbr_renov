{% extends 'base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
    <h1>Customers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Firstname</th>
                <td>{{ customer.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ customer.lastname }}</td>
            </tr>
            <tr>
                <th>Town</th>
                <td>{{ customer.Town }}</td>
            </tr>
            <tr>
                <th>Postalcode</th>
                <td>{{ customer.postalcode }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ customer.address }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ customer.mail }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Social_reason</th>
                <td>{{ customer.socialReason }}</td>
            </tr>
            <tr>
                <th>Customer_note</th>
                <td>{{ customer.customerNote }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ customer.updateAt ? customer.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_customers_index') }}" class="btn btn-primary">Retour</a>

    <a href="{{ path('app_customers_edit', {'id': customer.id}) }}">Modifier</a>

    {{ include('customers/_delete_form.html.twig') }}
{% endblock %}
