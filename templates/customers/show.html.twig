{% extends 'base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
    <h1>Customers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Prénom</th>
                <td>{{ customer.firstname|capitalize }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ customer.lastname|capitalize }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ customer.Town|capitalize }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{% if customer.postalcode|length is same as 4 %}0{{ customer.postalcode }}{% else %}{{ customer.postalcode }}{% endif %}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ customer.address|capitalize }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ customer.mail }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>0{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Raison Sociale</th>
                <td>{% if (customer.socialReason is same as null) or (customer.socialReason is same as '') %}X{% else %}{{ customer.socialReason }}{% endif %}</td>
            </tr>
            <tr>
                <th>Note Client</th>
                <td>{% if (customer.customerNote is same as null) or (customer.customerNote is same as '') %}X{% else %}{{ customer.customerNote }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ customer.createdAt ? customer.createdAt|date('d M Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ customer.updateAt ? customer.updateAt|date('d M Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex">
        <a href="{{ path('app_customers_index') }}" class="btn btn-primary mb-2 me-2"><i class="fa-solid fa-reply"></i></a>

        <a href="{{ path('app_customers_edit', {'id': customer.id}) }}"class="btn btn-success mb-2 me-2"><i class="fa fa-pen-to-square"></i></a>

        {{ include('customers/_delete_form.html.twig') }}
    </div>
{% endblock %}
