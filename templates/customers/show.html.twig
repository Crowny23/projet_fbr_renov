{% extends 'base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
    <h1>Customers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Prenom</th>
                <td>{{ customer.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ customer.lastname }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ customer.Town }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ customer.postalcode }}</td>
            </tr>
            <tr>
                <th>Addresse</th>
                <td>{{ customer.address }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ customer.mail }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Raison Sociale</th>
                <td>{{ customer.socialReason }}</td>
            </tr>
            <tr>
                <th>Note Client</th>
                <td>{{ customer.customerNote }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ customer.updateAt ? customer.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_customers_index') }}" class="btn btn-primary mb-2"><i class="fa-solid fa-reply"></i> Retour</a>

    <a href="{{ path('app_customers_edit', {'id': customer.id}) }}" class="btn btn-primary mb-2">Modifier</a>

    {{ include('customers/_delete_form.html.twig') }}
{% endblock %}
