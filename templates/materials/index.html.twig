{% extends 'base.html.twig' %}

{% block title %}Matériaux{% endblock %}

{% block body %}
    <h1>Matériaux</h1>

    <table class="table table-hover">
        <thead class="table">
            <tr>  

                <th>Nom Matériel</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            <tr>
                <td>{{ material.nameMaterial }}</td>
                <td>
                    <a href="{{ path('app_materials_show', {'id': material.id}) }}" class="btn btn-primary"><i class="fa-sharp fa-solid fa-eye"></i></a>
                    <a href="{{ path('app_materials_edit', {'id': material.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_materials_new') }}" class="btn btn-primary">Créer Nouveau</a>
{% endblock %}
