{% extends 'base.html.twig' %}

{% block title %}Matériels{% endblock %}

{% block body %}
    <h1>Matériels</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ material.id }}</td>
            </tr> #}
            <tr>
                <th>Nom Matériel</th>
                <td>{{ material.nameMaterial }}</td>
            </tr>
            <tr>
                <th>Créé</th>
                <td>{{ material.createdAt ? material.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié</th>
                <td>{{ material.updatedAt ? material.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_materials_index') }}">Retour à la liste</a>

    <a href="{{ path('app_materials_edit', {'id': material.id}) }}">Modifier</a>

