{% extends 'base.html.twig' %}

{% block title %}Matériels{% endblock %}

{% block body %}
    <h1>Matériels</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom Matériel</th>
                <td>{{ material.nameMaterial }}</td>
            </tr>
            <tr>
                <th>Créé</th>
                <td>{{ material.createdAt ? material.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié</th>
                <td>{{ material.updatedAt ? material.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_materials_index') }}" class="btn btn-primary mb-3"><i class="fa-solid fa-reply"></i> Retour</a>
    <a href="{{ path('app_materials_edit', {'id': material.id}) }}" class="btn btn-primary mb-3">Modifier</a>

    {{ include('materials/_delete_form.html.twig') }}
     
{% endblock %}
