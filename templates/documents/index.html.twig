{% extends 'base.html.twig' %}

{% block title %}Documents index{% endblock %}

{% block body %}
    <h1>Documents index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name_document</th>
                <th>UpdateAt</th>
                <th>Size</th>
                <th>MimeType</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.nameDocument }}</td>
                <td>{{ document.updateAt ? document.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ document.size }}</td>
                <td>{{ document.mimeType }}</td>
                <td>
                    <a href="{{ path('app_documents_show', {'id': document.id}) }}">show</a>
                    <a href="{{ path('app_documents_edit', {'id': document.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_documents_new') }}">Create new</a>
{% endblock %}
