{% extends 'base.html.twig' %}

{% block title %}Documents{% endblock %}

{% block body %}
    <h1>Documents</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Name_document</th>
                <td>{{ document.nameDocument }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ document.updateAt ? document.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ document.size }} ko</td>
            </tr>
            <tr>
                <th>MimeType</th>
                <td>{{ document.mimeType }}</td>
            </tr>
            <tr>
                <th>Pdf</th>
                <td><iframe src="{{ vich_uploader_asset(document) }}" frameborder="0" width="800" height="500"></iframe></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_documents_index') }}">back to list</a>

    <a href="{{ path('app_documents_edit', {'id': document.id}) }}">edit</a>

    {{ include('documents/_delete_form.html.twig') }}
{% endblock %}
