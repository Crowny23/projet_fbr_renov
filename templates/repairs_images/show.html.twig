{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <h1>Image</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom de l'image</th>
                <td>{{ repairs_image.imageRepairsImages }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ repairs_image.updatedAt ? repairs_image.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Taille de l'image</th>
                <td>{{ repairs_image.imageSize }} ko</td>
            </tr>
            <tr>
                <th>Type de fichier</th>
                <td>{{ repairs_image.mimeType }}</td>
            </tr>
            <tr>
                {% if repairs_image.mimeType == 'application/pdf' %}
                <th>Pdf</th>
                <td><iframe src="{{ vich_uploader_asset(repairs_image) }}" frameborder="0" width="800" height="500"></iframe></td>
                {% else %}
                <th>L'image</th>
                <td><img src="{{ vich_uploader_asset(repairs_image) }}" alt="" width="500"></td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_repairs_images_index') }}" class="btn btn-primary mb-3"><i class="fa-solid fa-reply"></i> Retour</a>

    <a href="{{ path('app_repairs_images_edit', {'id': repairs_image.id}) }}" class="btn btn-primary mb-3">Modifier</a>

    {{ include('repairs_images/_delete_form.html.twig') }}
{% endblock %}
