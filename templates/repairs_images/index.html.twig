{% extends 'base.html.twig' %}

{% block title %}Les Images {% endblock %}

{% block body %}
    <h1>Les images dépannages</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nom du dépannage</th>
                <th>Non d'image</th>
                <th>Taille</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for repairs_image in repairs_images %}
            <tr>
                <td>{{ repairs_image.repair }}</td>
                <td>{{ repairs_image.imageRepairsImages }}</td>
                <td>{{ repairs_image.imageSize }} ko</td>
                <td><img src="{{ vich_uploader_asset(repairs_image) }}" alt="" width="200"></td>
                <td>
                    <a href="{{ path('app_repairs_images_show', {'id': repairs_image.id}) }}" class="btn btn-primary"><i class="fa-sharp fa-solid fa-eye"></i></a>
                    <a href="{{ path('app_repairs_images_edit', {'id': repairs_image.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune image</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_repairs_images_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Créer une image</a>
{% endblock %}
