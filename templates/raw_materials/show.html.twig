{% extends 'base.html.twig' %}

{% block title %}Matériaux | Détails{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <h1 class="col-12 col-sm-9 text-center fs-2">Détails du matériau</h1>
</div>


    <table class="table">
        <tbody>
            <tr>
                <th>Matériau</th>
                <td>{{ raw_material.nameRawMaterial }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ raw_material.createdAt ? raw_material.createdAt|date('d M Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nom de la catégorie</th>
                <td>{{ raw_material.category }}</td>
            </tr>
            <tr>
                <th>Unité</th>
                <td>{{ raw_material.unit }}</td>
            </tr>
            <tr>
                <th>Prix HT</th>
                <td>{{ raw_material.price }}</td>
            </tr>
        </tbody>
</table>

<div class="d-flex">
    <a href="{{ path('app_raw_materials_index') }}" class="btn btn-primary mb-3 me-2"><i class="fa-solid fa-reply"></i> Retour</a>

    <a href="{{ path('app_raw_materials_edit', {'id': raw_material.id}) }}" class="btn btn-primary mb-3 me-2">Modifier</a>

    {{ include('raw_materials/_delete_form.html.twig') }}
</div>
{% endblock %}
