{% extends 'base.html.twig' %}

{% block title %}Admin | Compte{% endblock %}

{% block body %}
    <h1>Détails du comtpe admin</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex">
        <a href="{{ path('app_main') }}" class="btn btn-primary mb-3 me-2"><i class="fa-solid fa-reply"></i></a>

        {# <a href="{{ path('app_admin_edit_password') }}" class="btn btn-success mb-3 me-2"><i class="fa fa-lock"></i></a> #}

