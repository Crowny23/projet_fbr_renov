{% extends 'base.html.twig' %}

{% block title %}Devis{% endblock %}

{% block body %}
    <h1>Devis n°{{ quotation.referenceQuotation }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Réference du devis</th>
                <td>{{ quotation.referenceQuotation }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ quotation.priceQuotation }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ quotation.statusQuotation }}</td>
            </tr>
            <tr>
                <th>Montant de l'accompte</th>
                <td>{{ quotation.depositQuotation }}</td>
            </tr>
            <tr>
                <th>Montant du paiement intermédiaire</th>
                <td>{{ quotation.intermediatePaymentQuotation }}</td>
            </tr>
            <tr>
                <th>Montant du paiement final</th>
                <td>{{ quotation.finalPaymentQuotation }}</td>
            </tr>
            <tr>
                <th>Chantier</th>
                <td>{{ quotation.worksite }}</td>
            </tr>
            <tr>
                <th>Listes des désignations</th>
                <td>
                    <table class="col-12">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Unité</th>
                                <th>Quantité</th>
                                <th>Prix unitaire HT</th>
                                <th>Prix HT</th>
                                <th>TVA</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for designation in designations %}
                            <tr>
                                <td>{{ designation.name }}</td>
                                <td>{{ designation.unity }}</td>
                                <td>{{ designation.quantity }}</td>
                                <td>{{ designation.priceUnitaryHt }},00€</td>
                                <td>{{ designation.priceHt }},00€</td>
                                <td>{{ designation.tva }}</td>
                                <td>
                                    {{ include('designation/_delete_form.html.twig') }}
                                    <a href="{{ path('app_designation_edit', {'id': designation.id}) }}"class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">Aucun enregistrement trové</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a href="{{ path('app_designation_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Créer</a>
                </td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ quotation.createdAt ? quotation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ quotation.updatedAt ? quotation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_quotation_index') }}" class="btn btn-primary mb-3"><i class="fa fa-reply"></i> Retour</a>

    <a href="{{ path('app_quotation_edit', {'id': quotation.id}) }}"  class="btn btn-primary mb-3">Modifier</a>

    {{ include('quotation/_delete_form.html.twig') }}
{% endblock %}
