{% extends 'base.html.twig' %}

{% block title %}Liste des devis{% endblock %}

{% block body %}
    <h1>Liste des devis</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Objet</th>
                <th>Reference</th>
                <th>Prix</th>
                <th>Statut</th>
                <th>Montant de l'accompte</th>
                <th>Paiement interm√©diaire</th>
                <th>Paiement final</th>
                <th>Actions</th>
                <th><a href="{{ path('app_quotation_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Ajouter</a></th>
            </tr>
        </thead>
        <tbody>
        {% for quotation in quotations %}
            <tr>
                <td>{{ quotation.object }}</td>
                <td>{{ quotation.referenceQuotation }}</td>
                <td>{{ quotation.priceQuotation }}</td>
                <td>{{ quotation.statusQuotation }}</td>
                <td>{{ quotation.depositQuotation }}</td>
                <td>{{ quotation.intermediatePaymentQuotation }}</td>
                <td>{{ quotation.finalPaymentQuotation }}</td>
                <td>
                    <a href="{{ path('app_pdf_generator', {'id': quotation.id}) }}" class="btn btn-primary"><i class="fa fa-file-pdf"></i></a>
                    <a href="{{ path('app_quotation_show', {'id': quotation.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_quotation_edit', {'id': quotation.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
                <td></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Pas de devis existant</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
