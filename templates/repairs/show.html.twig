{% extends 'base.html.twig' %}

{% block title %}Repairs{% endblock %}

{% block body %}
    <h1>Repairs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ repair.id }}</td>
            </tr>
            <tr>
                <th>Name_repair</th>
                <td>{{ repair.nameRepair }}</td>
            </tr>
            <tr>
                <th>City_repair</th>
                <td>{{ repair.cityRepair }}</td>
            </tr>
            <tr>
                <th>Cp_repair</th>
                <td>{{ repair.cpRepair }}</td>
            </tr>
            <tr>
                <th>Adress_repair</th>
                <td>{{ repair.adressRepair }}</td>
            </tr>
            <tr>
                <th>Price_repair</th>
                <td>{{ repair.priceRepair }}</td>
            </tr>
            <tr>
                <th>Reference_repair</th>
                <td>{{ repair.referenceRepair }}</td>
            </tr>
            <tr>
                <th>Schedule_repair</th>
                <td>{{ repair.scheduleRepair }}</td>
            </tr>
            <tr>
                <th>Travel_distance_repair</th>
                <td>{{ repair.travelDistanceRepair }}</td>
            </tr>
            <tr>
                <th>Note_admin_repair</th>
                <td>{{ repair.noteAdminRepair }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ repair.createdAt ? repair.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ repair.updatedAt ? repair.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>
                    {% for image in images %}
                    <img src="{{ vich_uploader_asset(image) }}" alt="" width="200">
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_repairs_index') }}">back to list</a>

    <a href="{{ path('app_repairs_edit', {'id': repair.id}) }}">edit</a>

    {{ include('repairs/_delete_form.html.twig') }}
