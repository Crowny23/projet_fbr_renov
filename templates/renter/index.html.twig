{% extends 'base.html.twig' %}

{% block title %}Locatiers{% endblock %}

{% block body %}
    <h1>Locatiers</h1>
    <table class="table table-hover" id="table" data-toggle="table" data-search="true" data-locale="fr-FR" data-pagination="true">
        <thead>
            <tr>
                <th data-sortable="true" data-field="renter">Nom Locatiers</th>
                <th data-sortable="true" data-field="address">Adresse complète</th>
                <th data-sortable="true" data-field="site">Site Internet</th>
                <th data-sortable="true" data-field="mail">E-mail</th>
                <th data-sortable="true" data-field="phone">Téléphone</th>
                <th data-sortable="true" data-field="note">Note</th>
                <th>Actions</th>
                <th><a href="{{ path('app_renter_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Ajouter</a></th>
            </tr>
        </thead>
        <tbody>
        {% for renter in renters %}
            <tr style="background-color: white;">
                <td>{{ renter.nameRenter }}</td>
                <td>{{ renter.adressRenter }} {{ renter.cpRenter }} {{ renter.cityRenter }}</td>
                <td>{{ renter.websiteRenter }}</td>
                <td>{{ renter.emailRenter }}</td>
                <td>{{ renter.phoneRenter }}</td>
                <td>
                    <a href="{{ path('app_renter_show', {'id': renter.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_renter_edit', {'id': renter.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                    
                    
                </td>
                <td></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
