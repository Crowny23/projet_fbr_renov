{% extends 'base.html.twig' %}

{% block title %}Locatiers{% endblock %}

{% block body %}
    <h1>Locatiers</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Nom Locatiers</th>
                <th>Ville</th>
                <th>Code Postale</th>
                <th>Adresse</th>
                <th>Site Internet</th>
                <th>E-mail</th>
                <th>Téléphone</th>
                <th>Note</th>
                {# <th>Créé</th>
                <th>Modifié</th> #}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for renter in renters %}
            <tr>
                {# <td>{{ renter.id }}</td> #}
                <td>{{ renter.nameRenter }}</td>
                <td>{{ renter.cityRenter }}</td>
                <td>{{ renter.cpRenter }}</td>
                <td>{{ renter.adressRenter }}</td>
                <td>{{ renter.websiteRenter }}</td>
                <td>{{ renter.emailRenter }}</td>
                <td>{{ renter.phoneRenter }}</td>
                <td>{{ renter.noteAdminRenter }}</td>
                {# <td>{{ renter.createdAt ? renter.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ renter.updatedAt ? renter.updatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>
                    <a href="{{ path('app_renter_show', {'id': renter.id}) }}">Voir</a>
                    <a href="{{ path('app_renter_edit', {'id': renter.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_renter_new') }}">Créer</a>
{% endblock %}
