{% extends 'base.html.twig' %}

{% block title %}Locatiers{% endblock %}

{% block body %}
    <h1>Locatiers</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nom Locatiers</th>
                <th>Ville</th>
                <th>Code Postale</th>
                <th>Adresse</th>
                <th>Site Internet</th>
                <th>E-mail</th>
                <th>Téléphone</th>
                <th>Actions</th>
                <th><a href="{{ path('app_renter_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Ajouter</a></th>
            </tr>
        </thead>
        <tbody>
        {% for renter in renters %}
            <tr style="background-color: white;">
                <td>{{ renter.nameRenter }}</td>
                <td>{{ renter.cityRenter }}</td>
                <td>{{ renter.cpRenter }}</td>
                <td>{{ renter.adressRenter }}</td>
                <td>{{ renter.websiteRenter }}</td>
                <td>{{ renter.emailRenter }}</td>
                <td>{{ renter.phoneRenter }}</td>
                <td>
                    <a href="{{ path('app_renter_show', {'id': renter.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_renter_edit', {'id': renter.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                    
                    
                </td>
                <td></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
