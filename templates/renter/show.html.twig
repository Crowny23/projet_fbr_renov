{% extends 'base.html.twig' %}

{% block title %}Locations | Détails locatiers{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <h1 class="col-12 col-sm-9 text-center fs-2">Détails du locatier</h1>
</div>

<table class="table">
    <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ renter.nameRenter }}</td>
        </tr>
        <tr>
            <th>Ville</th>
            <td>{{ renter.cityRenter }}</td>
        </tr>
        <tr>
            <th>Code Postale</th>
            <td>{% if (renter.cpRenter|length is same as 4) %}0{{ renter.cpRenter }}{% else %}{{renter.cpRenter }}{% endif %}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ renter.adressRenter }}</td>
        </tr>
        <tr>
            <th>Site Internet</th>
            <td>{{ renter.websiteRenter }}</td>
        </tr>
        <tr>
            <th>E-mail</th>
            <td>{{ renter.emailRenter }}</td>
        </tr>
        <tr>
            <th>Téléphone</th>
            <td>0{{ renter.phoneRenter }}</td>
        </tr>
        <tr>
            <th>Note</th>
            <td>{% if (renter.noteAdminRenter is same as null) or (renter.noteAdminRenter is same as '') %}Pas de note{% else %} {{ worksite.noteClientWorksite }}{% endif %}</td>
        </tr>
        <tr>
            <th>Date de création</th>
            <td>{{ renter.createdAt ? renter.createdAt|date('d M Y H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Date de modification</th>
            <td>{{ renter.updatedAt ? renter.updatedAt|date('d M Y H:i:s') : '' }}</td>
        </tr>
    </tbody>
</table>
<div class="d-flex">
    <a href="{{ path('app_renter_index') }}" class="btn btn-primary mb-3 me-2"><i class="fa-solid fa-reply"></i> Retour</a>

    <a href="{{ path('app_renter_edit', {'id': renter.id}) }}" class="btn btn-primary mb-3 me-2">Modifier</a>

    {{ include('renter/_delete_form.html.twig') }}
</div>
{% endblock %}
