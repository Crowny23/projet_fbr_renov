{% extends 'base.html.twig' %}

{% block title %}RawMaterialsCategories index{% endblock %}

{% block body %}
    <h1>RawMaterialsCategories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de la catégorie</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for raw_materials_category in raw_materials_categories %}
            <tr>
                <td>{{ raw_materials_category.id }}</td>
                <td>{{ raw_materials_category.name }}</td>
                <td>{{ raw_materials_category.createdAt ? raw_materials_category.createdAt|date('d M Y H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_raw_materials_categories_show', {'id': raw_materials_category.id}) }}">Voir</a>
                    <a href="{{ path('app_raw_materials_categories_edit', {'id': raw_materials_category.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de catégorie existante</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_raw_materials_categories_new') }}">Ajouter une Nouvelle catégorie</a>
{% endblock %}
