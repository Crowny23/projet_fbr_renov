{% extends 'base.html.twig' %}

{% block title %}Categorie Matériaux{% endblock %}

{% block body %}
    <h1>Categories des matériaux</h1>

    <a href="{{ path('app_raw_materials_categories_new') }}" class="btn btn-primary float-end mt-2 col-2"><i class="fa fa-plus"></i> Ajouter</a>

    <table class="table table-hover" id="table" data-toggle="table" data-search="true" data-locale="fr-FR" data-pagination="true">
        <thead>
            <tr>
                <th data-sortable="true" data-field="name_category">Nom de la catégorie</th>
                <th data-sortable="true" data-field="created_at">Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for raw_materials_category in raw_materials_categories %}
            <tr>
                <td>{{ raw_materials_category.name }}</td>
                <td>{{ raw_materials_category.createdAt ? raw_materials_category.createdAt|date('d M Y H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_raw_materials_categories_show', {'id': raw_materials_category.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_raw_materials_categories_edit', {'id': raw_materials_category.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de catégorie existante</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
