{% extends 'base.html.twig' %}

{% block title %}Matériaux | Catégories{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <h1 class="col-12 col-sm-9 text-center fs-2">Liste des catégories de matériaux</h1>
</div>

    <a href="{{ path('app_raw_materials_categories_new') }}" class="btn btn-primary float-sm-end mt-2 col-6 col-sm-4 col-md-3 col-lg-2"><i class="fa fa-plus"></i> Ajouter</a>

    <table class="table table-hover" id="table" data-toggle="table" data-search="true" data-locale="fr-FR" data-pagination="true">
        <thead>
            <tr>
                <th data-sortable="true" data-field="name_category">Catégorie</th>
                <th class="col-4">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for raw_materials_category in raw_materials_categories %}
            <tr>
                <td>{{ raw_materials_category.name }}</td>
                <td>
                    <a href="{{ path('app_raw_materials_categories_show', {'id': raw_materials_category.id}) }}" class="btn btn-primary btn-sm"><i class="fa-fw fa fa-eye"></i></a>
                    <a href="{{ path('app_raw_materials_categories_edit', {'id': raw_materials_category.id}) }}" class="btn btn-success btn-sm"><i class="fa-fw fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune catégorie enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
