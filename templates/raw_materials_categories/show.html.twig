{% extends 'base.html.twig' %}

{% block title %}Matériaux | Catégories de matériaux{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <h1 class="col-12 col-sm-9 text-center fs-2">Détails de la catégorie</h1>
</div>

<table class="table">
    <tbody>
        <tr>
            <th>Nom de la catégorie</th>
            <td>{{ raw_materials_category.name }}</td>
        </tr>
        <tr>
            <th>Date de création</th>
            <td>{{ raw_materials_category.createdAt ? raw_materials_category.createdAt|date('d M Y H:i:s') : '' }}</td>
        </tr>
    </tbody>
</table>

<div class="d-flex">
    <a href="{{ path('app_raw_materials_categories_index') }}" class="btn btn-primary mb-3 me-2"><i class="fa-solid fa-reply fa-fw"></i> Retour</a>

    <a href="{{ path('app_raw_materials_categories_edit', {'id': raw_materials_category.id}) }}" class="btn btn-primary mb-3 me-2"><i class="fa-solid fa-pen-to-square fa-fw"></i>Modifier</a>

    {{ include('raw_materials_categories/_delete_form.html.twig') }}
</div>
{% endblock %}
