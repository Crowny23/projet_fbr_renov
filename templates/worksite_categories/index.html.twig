{% extends 'base.html.twig' %}

{% block title %}Catégories de chantiers{% endblock %}

{% block body %}
    <h1>Liste des catégories de chantiers</h1>
    <a href="{{ path('app_worksite_categories_new') }}" class="btn btn-primary float-end mt-2 col-2"><i class="fa fa-plus"></i> Ajouter</a>
    <table class="table table-hover" id="table" data-toggle="table" data-search="true" data-locale="fr-FR" data-pagination="true">
        <thead>
            <tr>
                <th data-sortable="true" data-field="category_name">Nom de la catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for worksite_category in worksite_categories %}
            <tr style="background-color: white;">
                <td>{{ worksite_category.nameWorksiteCategories }}</td>
                <td>
                    <a href="{{ path('app_worksite_categories_show', {'id': worksite_category.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_worksite_categories_edit', {'id': worksite_category.id}) }}" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune catégorie enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
