{% extends 'base.html.twig' %}

{% block title %}{{ worksite_category.nameWorksiteCategories }}{% endblock %}

{% block body %}
    <h1>Catégorie : {{ worksite_category.nameWorksiteCategories }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ worksite_category.id }}</td>
            </tr>
            <tr>
                <th>Nom de la catégorie</th>
                <td>{{ worksite_category.nameWorksiteCategories }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ worksite_category.createdAt ? worksite_category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de dernière modification</th>
                <td>{{ worksite_category.updatedAt ? worksite_category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_worksite_categories_index') }}">Retour à la liste des catégories</a>

    <a href="{{ path('app_worksite_categories_edit', {'id': worksite_category.id}) }}">Modifier</a>

    {{ include('worksite_categories/_delete_form.html.twig') }}
{% endblock %}
